@page
@model AboutModel
@{
    ViewData["Title"] = "About Page";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
    .hero {
      position: relative;
      width: 100%;
      margin-top: -91px;
    }
 
    .hero-image-wrapper {
      position: relative;
    }
 
    .hero-image {
      width: 100%;
      height: 350px;
    }
 
    .hero-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), rgba(128, 128, 128, 0.6));
      text-align: center;
      padding: 20px;
      border-radius: 8px;
      max-width: 90%;
      box-sizing: border-box;
    }
 
    .hero-content h1 {
      font-size: 2.5rem;
      margin: 0;
      
    }

    .hero-content h2{
      text-align: left;
    }
 
    .hero-content p {
      font-size: 1.2rem;
      text-align: left;
    }
 
    .board-section {
      max-width: 1000px;
      width: 90%;
      margin: 20px auto;
    }
 
    .board-header {
      text-align: center;
      margin-bottom: 20px;
    }
 
    .board-header h2 {
      font-size: 24px;
      color: #4b2a2a;
    }
 
    .board-header p {
      color: #666;
      font-size: 16px;
    }

    .board-carousel {
      display: flex;
      align-items: center;
      justify-content: space-between;
      overflow: hidden;
      position: relative;
      width: 100%;
      max-width: 1400px;
      margin: 0 auto;
      padding: 30px;
    }

    .carousel-control {
      background-color: white;
      opacity:40%;
      font-size: 28px;
      color: #333;
      cursor: pointer;
      padding: 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      border:none;
    }

    .carousel-control:hover{
        background: linear-gradient(to top, rgba(0, 128, 0, 0.7), transparent);
        opacity:40%;
    }

    .board-members {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      gap: 40px;
      padding: 10px 0;
      width: 100%;
    }
 
    .board-members::-webkit-scrollbar {
      display: none;
    }

        .member {
            flex: 0 0 350px;
            text-align: center;
            position: relative;
            scroll-snap-align: center;
            overflow: hidden;
        }

            .member img {
                width: 100%;
                height: 400px;
                border-radius: 8px;
            }

        .overlay {
            position: absolute;
            bottom: 91px;
            left: 0;
            right: 0;
            height: 25%;
            background: linear-gradient(to top, rgba(0, 128, 0, 0.7), transparent);
            color: #fff;
            display: none;
            justify-content: center;
            align-items: center;
            border-radius: 8px;
        }

        .member:hover .overlay {
            display: flex; 
        }
 
    .learn-more {
      background-color: white;
      color: black;
      border: none;
      padding: 8px 16px;
      cursor: pointer;
      border-radius: 4px;
      font-weight: bold;
      font-size: 14px;
    }
 
    .name {
      font-size: 18px;
      font-weight: bold;
      margin-top: 10px;
    }
 
    .position {
      font-size: 16px;
      color: #00C2FF;
    }

    @@media (max-width: 768px) {
      .hero-content h1 {
        font-size: 1.75rem;
      }
 
      .hero-content p {
        font-size: 1rem;
      }
 
      .board-carousel {
        flex-direction: column;
      }
 
      .carousel-control {
        display: none;
      }
 
      .board-members {
        gap: 10px;
      }
 
      .member {
        flex: 0 0 250px;
      }
    }
</style>
</head>
<body>
    <section class="hero">
        <div class="hero-image-wrapper">
            <img src="~/images/aboutBackground.png" alt="Boardroom Meeting" class="hero-image">
            <div class="hero-content">
                <h2>OUR BOARD</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
        </div>
    </section>
    <div class="board-section">
        <div class="board-carousel">
            <button class="carousel-control prev">&lt;</button>
            <div class="board-members">
                <div class="member">
                    <img src="~/images/female.png" alt="Lisa Storms">
                    <div class="overlay">
                        <a class="learn-more" asp-area="" asp-page="/AboutMember">LEARN MORE</a>
                    </div>
                    <p class="name">Lisa Storms</p>
                    <p class="position">Director</p>
                </div>
                <div class="member">
                    <img src="~/images/female.png" alt="Ljorn Gibbs">
                    <div class="overlay">
                        <a class="learn-more" asp-area="" asp-page="/AboutMember">LEARN MORE</a>
                    </div>
                    <p class="name">Ljorn Gibbs</p>
                    <p class="position">Director</p>
                </div>
                <div class="member">
                    <img src="~/images/female.png" alt="Testing Tom">
                    <div class="overlay">
                        <a class="learn-more" asp-area="" asp-page="/AboutMember">LEARN MORE</a>
                    </div>
                    <p class="name">Testing Tom</p>
                    <p class="position">Director</p>
                </div>
            </div>
            <button class="carousel-control next">&gt;</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const membersContainer = document.querySelector(".board-members");
        const members = Array.from(document.querySelectorAll(".member"));
        const prevButton = document.querySelector(".carousel-control.prev");
        const nextButton = document.querySelector(".carousel-control.next");

        let currentIndex = 0;

        function updateCarousel() {
            if (currentIndex < 0) {
                currentIndex = members.length - 1;
            } else if (currentIndex >= members.length) {
                currentIndex = 0;
            }

            membersContainer.scrollTo({
                left: members[currentIndex].offsetLeft - (membersContainer.clientWidth / 2) + (members[currentIndex].clientWidth / 2),
                behavior: "smooth",
            });
        }

        prevButton.addEventListener("click", function () {
            currentIndex -= 1;
            updateCarousel();
        });

        nextButton.addEventListener("click", function () {
            currentIndex += 1;
            updateCarousel();
        });

        setInterval(() => {
            currentIndex += 1;
            updateCarousel();
        }, 3000);
    });
</script>
