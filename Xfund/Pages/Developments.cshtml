@page
@model Xfund.Pages.DevelopmentsModel
@{
    ViewData["Title"] = "Developments";
}


<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    @* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      
        .hero img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .hero{
            position: absolute;
            top: 0;
            width: 100%;
            height: 65vh;
        }

        .overlay{
            position: absolute;
            top: 0;
            width: 100%;
            height: 65vh;
            background: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .hero-heading {
            color: white;
        }

        .hero-heading h1, .section-header, 
        .property-details-top 
        {
            text-transform: uppercase;
        }

        .main-section{
            margin-top: 65vh;
        }

        .section-header{
            display: flex;
            justify-content: center;
        }
        .section-header::after{
            content: '';
            position: absolute;
            display: block;
                border-bottom: 3px solid #8ec63f;
            width: 100px;
            margin: auto;
            padding: 20px;
        }

        .property{
            height: 425px;
            max-height: 425px;
        }
        .property img {
            object-fit: cover:
            width: 100%;
            height: 100%;
        }

        .property-details{
            position: absolute;
            bottom: 0;
            left:0;
            width: 100%;
            background: rgba(0, 0, 0, 0.5);
            color: #fff;   
            /* transform: translateY(calc(7vh));
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1); */
            
        }

        .property-details-bottom{
           text-transform: uppercase;
           font-size: 12px;

            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            color: #fff;
            transform: translateY(calc(15vh));
            transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
        }

         .property:hover .property-details-bottom {
            opacity: 1;
            transform: translateY(calc(0vh));
            position: relative;
        }
    </style>
</head>
<body>

    <div id="hero" class="hero">
       <img src="~/images/developments_hero.jpeg" alt="Alternate Text" />
       <div class="overlay">
           <div class="hero-heading">
               <h1>
                   Properties & Developments
               </h1>
           </div>
       </div>
    </div>

    <section class="main-section">
        <div class="section-header">
            <h3>Current Listings</h3>
        </div>

        <div class="property-listing my-5">
            <div class="container">
                <div class="row">
                    <!-- Property Card -->
                    <div class="col-md-6 col-container py-2">
                        <div class="property position-relative overflow-hidden">
                            <a href="/Property">
                                <img src="~/images/double_tree.png" alt="Alternate Text" class="img-fluid" />
                                <div class="property-details p-3">
                                    <div class="property-details-top">
                                        <h5>The Asian Mews</h5>
                                    </div>
                                    <div class="property-details-bottom d-flex p-1">
                                        <small>
                                            Find a bit of Asia up north of Jamaica within a natural rural setting at The Asian Mews. 
                                            An elegant art piece that you can call home.
                                        </small>
                                        <button class="btn btn-transparent border border-white text-white rounded-0 px-3">Details</button>
                                    </div>
                                </div>

                            </a>
                        </div>
                    </div>

                    <!-- Property Card -->
                    <div class="col-md-6 col-container py-2">
                        <div class="property position-relative overflow-hidden">
                            <a href="/Property">
                                <img src="~/images/property1.jpg" alt="Alternate Text" class="img-fluid" />
                                <div class="property-details p-3">
                                    <div class="property-details-top">
                                        <h5>The Asian Mews</h5>
                                    </div>
                                    <div class="property-details-bottom d-flex pt-1">
                                        <small>
                                            Find a bit of Asia up north of Jamaica within a natural rural setting at The Asian Mews.
                                            An elegant art piece that you can call home.
                                        </small>
                                        <button class="btn btn-transparent border border-white text-white rounded-0 px-3">Details</button>
                                    </div>
                                </div>

                            </a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>